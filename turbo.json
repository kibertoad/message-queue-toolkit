{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputLogs": "new-only"
    },
    "clean": {
      "cache": false
    },
    "test:coverage": {
      "dependsOn": ["^test:coverage"]
    },
    "lint": {
      "outputLogs": "errors-only"
    },
    "lint:fix": {
      "outputLogs": "errors-only"
    }
  }
}
