{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": ["QUEUE_BACKEND"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputLogs": "new-only"
        },
        "clean": {
            "cache": false
        },
        "test:coverage": {
            "dependsOn": ["^test:coverage"]
        },
        "lint": {
            "outputLogs": "errors-only"
        },
        "lint:fix": {
            "outputLogs": "errors-only"
        },
        "docker:start": {},
        "docker:stop": {}
    }
}
