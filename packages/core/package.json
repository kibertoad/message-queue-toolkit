    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@lokalise/biome-config": "^2.0.0",
        "@lokalise/tsconfig": "^2.0.0",
        "@types/node": "^24.0.3",
        "@types/tmp": "^0.2.6",
        "@vitest/coverage-v8": "^3.2.4",
        "awilix": "^12.0.5",
